<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sp_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="packageClicker">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:src="@drawable/bgdr"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Specialized Package"
                    android:textSize="@dimen/_15sdp"
                    android:textAlignment="center"
                    android:background="#2475B0"
                    android:textColor="#FFFFFF"
                    android:padding="@dimen/_10sdp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ex_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="@dimen/_10sdp"
                android:onClick="packageClicker"
                android:layout_margin="@dimen/_10sdp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:src="@drawable/exckup"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Executive Health Check-up"
                    android:textSize="@dimen/_15sdp"
                    android:textAlignment="center"
                    android:background="#218F76"
                    android:textColor="#FFFFFF"
                    android:padding="@dimen/_10sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/gn_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="@dimen/_10sdp"
                android:onClick="packageClicker"
                android:layout_margin="@dimen/_10sdp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:src="@drawable/general"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General Health Check-up"
                    android:textSize="@dimen/_15sdp"
                    android:textAlignment="center"
                    android:background="#586776"
                    android:textColor="#FFFFFF"
                    android:padding="@dimen/_10sdp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>